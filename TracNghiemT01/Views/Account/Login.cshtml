<!-- Views/Account/Login.cshtml -->
@model TracNghiemT01.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Đăng nhập hệ thống</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-select">
                                <option value="">-- Chọn vai trò --</option>
                                <option value="Admin">Admin</option>
                                <option value="GiangVien">Giảng viên</option>
                                <option value="SinhVien">Sinh viên</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TenDangNhap" class="form-label"></label>
                            <input asp-for="TenDangNhap" class="form-control" />
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MatKhau" class="form-label"></label>
                            <input asp-for="MatKhau" class="form-control" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="text-danger mb-3" asp-validation-summary="ModelOnly"></div>

                        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}